<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/extended_game_info.css" />
	</styles>

	<Panel class="OverthrowGameInfo">

		<Panel id="Title">
			<Image id="ExtendedTitle" class="SeqImg" src="file://{images}/custom_game/tutorial/extended.png" />
		</Panel>

		<Label id="Intro01" class="Header" html="true" text="#extended_tutorial_intro_01" />
		<Label id="Intro02" text="#extended_tutorial_intro_02" />

		<Panel id="Heroes" class="InfoBox">
			<Panel id="HeroesTextBox">
				<Label id="HeroesTitle" class="Header" html="true" text="#extended_tutorial_heroes_title" />
				<Label id="Heroes01" html="true" text="#extended_tutorial_heroes_01" />
				<Label id="Heroes02" html="true" text="#extended_tutorial_heroes_02" />
				<Label id="Heroes03" html="true" text="#extended_tutorial_heroes_03" />
			</Panel>
			<Image id="HeroesImage" src="file://{images}/custom_game/tutorial/Tutorial01.png" />
		</Panel>

		<Image id="AbilitiesImage" src="file://{images}/custom_game/tutorial/Tutorial02.png" />

		<Panel id="Items" class="InfoBox">
			<Panel id="ItemsTextBox">
				<Label id="ItemsTitle" class="Header" html="true" text="#extended_tutorial_items_title" />
				<Label id="Items01" html="true" text="#extended_tutorial_items_01" />
				<Label id="Items02" html="true" text="#extended_tutorial_items_02" />
			</Panel>
		</Panel>

		<Image id="ItemsImage" src="file://{images}/custom_game/tutorial/Tutorial03.png" />

		<Panel id="Creeps" class="InfoBox">
			<Panel id="CreepsTextBox">
				<Label id="CreepsTitle" class="Header" html="true" text="#extended_tutorial_creeps_title" />
				<Label id="Creeps01" html="true" text="#extended_tutorial_creeps_01" />
			</Panel>
		</Panel>

		<Panel id="Roshan" class="InfoBox">
			<Panel id="RoshanTextBox">
				<Label id="RoshanTitle" class="Header" html="true" text="#extended_tutorial_roshan_title" />
				<Label id="Roshan01" html="true" text="#extended_tutorial_roshan_01" />
			</Panel>
		</Panel>

		<Panel id="PowerBalance" class="InfoBox">
			<Panel id="PowerBalanceTextBox">
				<Label id="PowerBalanceTitle" class="Header" html="true" text="#extended_tutorial_power_balance_title" />
				<Label id="PowerBalance01" html="true" text="#extended_tutorial_power_balance_01" />
				<Label id="PowerBalance02" html="true" text="#extended_tutorial_power_balance_02" />
				<Label id="PowerBalance03" html="true" text="#extended_tutorial_power_balance_03" />
				<Label id="PowerBalance04" html="true" text="#extended_tutorial_power_balance_04" />
			</Panel>
		</Panel>

		<Panel id="Contributors" class="InfoBox">
			<Panel id="ContributorsTextBox">
				<Label id="ContributorsTitle" class="Header" html="true" text="#extended_tutorial_credits_title" />
				<Label id="Contributors01" html="true" text="#extended_tutorial_credits_01" />
				<Label id="Contributors02" html="true" text="#extended_tutorial_credits_02" />
			</Panel>
		</Panel>

		<Label id="End" class="Header" html="true" text="#extended_tutorial_end" />

	</Panel>
</root>

